<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/measurements_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/measurements_delete_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="82 cm"/>

    <ImageButton
        android:id="@+id/measurements_delete_btn"
        style="@style/AppTheme.ClickableIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ico_icon="gmd_delete"
        app:layout_constraintBottom_toBottomOf="@+id/measurements_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/measurements_text"
        tools:src="@android:drawable/ic_delete"/>
</android.support.constraint.ConstraintLayout>